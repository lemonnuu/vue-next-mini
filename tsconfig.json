{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "downlevelIteration": true, // 支持语法迭代：https://www.typescriptlang.org/tsconfig#downlevelIteration
    "resolveJsonModule": true,
    "esModuleInterop": true, // https://www.typescriptlang.org/tsconfig#esModuleInterop
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src"]
}
